<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity1">

    <EditText
        android:id="@+id/txtMultiline"
        android:layout_width="319dp"
        android:layout_height="66dp"
        android:layout_marginTop="264dp"
        android:ems="10"
        android:gravity="start|top"

        android:inputType="textMultiLine"
        android:linksClickable="true"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnVolver1"
        android:layout_width="273dp"
        android:layout_height="63dp"
        android:layout_marginBottom="160dp"
        android:backgroundTint="#EDE2E2"
        android:drawableLeft="@android:drawable/ic_media_rew"
        android:foregroundTintMode="add"
        android:text="Volver"

        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMultiline"
        app:layout_constraintVertical_bias="0.926" />

    <TextView
        android:id="@+id/txtContador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="contador"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btnVolver1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.743"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMultiline" />

</androidx.constraintlayout.widget.ConstraintLayout>